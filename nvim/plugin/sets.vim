set exrc
set relativenumber
set nu

" search
set nohlsearch
set incsearch
set ignorecase
set smartcase

" managing buffers
set hidden
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile

" text appearance
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set nowrap
set scrolloff=8

" etc
set guicursor=
set termguicolors
set noerrorbells
set signcolumn=yes
set cmdheight=2
set colorcolumn=80
