set exrc

" search
set nohlsearch
set incsearch
set ignorecase
set smartcase

" managing buffers
set hidden
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile

" text appearance
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set nowrap
set scrolloff=8

" nvim appearance
set relativenumber
set nu
set guicursor=
set termguicolors
set signcolumn=yes
set cmdheight=2
set colorcolumn=80
set cursorline

" etc
set noerrorbells

